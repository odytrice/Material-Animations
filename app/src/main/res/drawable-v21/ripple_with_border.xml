<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/holo_orange_dark">

    <item android:id="@android:id/mask"
        android:drawable="@android:color/white"/>

    <!-- the use of the id @android:id/mask declares this as being a mask,
     and that mask defines the bounds of the ripple animation.

     Included is a solid fill within the shape drawable which defines the mask-->
</ripple>
